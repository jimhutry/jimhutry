void turnEnc(double angle_deg, int direction) {
    if (angle_deg <= 0) return;

    const double wheelCirc = M_PI * WHEEL_DIAMETER_CM;
    const double trackCirc = M_PI * TRACK_WIDTH_CM;

    // сколько см проезжает колесо
    double dist_cm = trackCirc * (angle_deg / 360.0);
    double rotationsWheel = dist_cm / wheelCirc;

    // перевод в градусы энкодера (с учётом шестерён)
    double targetDeg = rotationsWheel * 360.0 * GEAR_RATIO;

    resetMotorEncoder(motorA);
    resetMotorEncoder(motorB);

    int speed = 50;

    // мотор A вперёд, мотор B назад (или наоборот)
    setMotorSpeed(motorA, speed * direction);
    setMotorSpeed(motorB, -speed * direction);

    while (fabs(getMotorEncoder(motorA)) < targetDeg &&
           fabs(getMotorEncoder(motorB)) < targetDeg) {
        delay(20);
    }

    setMotorSpeed(motorA, 0);
    setMotorSpeed(motorB, 0);
}
