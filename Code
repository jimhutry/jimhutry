void turnEnc(float angle) {
    // Параметры робота
    const float wheelDiameter = 3.0;      // диаметр колеса (см) – подставь свой
    const float trackWidth = 12.0;        // база между колесами (см) – измерь у своего робота
    const float wheelCircumference = 3.14 * wheelDiameter;

    // Сколько нужно проехать одному колесу для поворота на angle градусов
    float turnCircumference = 3.14 * trackWidth;      // окружность "базы"
    float dist = (turnCircumference * angle) / 360.0; // путь одного колеса при повороте

    // Конвертация в градусы энкодера
    float rotations = dist / wheelCircumference;
    float degrees = rotations * 360.0;

    // Сброс энкодеров
    resetMotorEncoder(motorA);
    resetMotorEncoder(motorB);

    // Запуск: один мотор вперед, другой назад
    setMotorSpeed(motorA, 50);
    setMotorSpeed(motorB, -50);

    // Ждем, пока не достигнем нужного угла
    while (abs(getMotorEncoder(motorA)) < degrees) {
        delay(50);
    }

    // Остановка
    setMotorSpeed(motorA, 0);
    setMotorSpeed(motorB, 0);
}
